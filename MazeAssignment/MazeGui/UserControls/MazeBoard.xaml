<UserControl x:Class="MazeGui.UserControls.MazeBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MazeGui.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">

    <Viewbox  StretchDirection="Both" Stretch="Uniform" Height="Auto" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" Width="Auto">
        <Border BorderBrush="Black" BorderThickness="3">
            <Canvas x:Name="MazeCanvas" Width="300" Height="300" Focusable="True" ></Canvas>
        </Border>
    </Viewbox>
</UserControl>


